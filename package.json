{
  "name": "pipeline-workshop",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "ng serve",
    "start:wait": "ng serve & wait-on http://localhost:4200",
    "build": "ng build",
    "lint": "eslint . --ext .ts,.html",
    "format": "prettier --write \"src/**/*.{ts,html,css}\"",
    "test": "ng test --watch=false",
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    "ci": "npm run lint && npm run test && npm run e2e"
  },
  "dependencies": {
    "@angular/animations": "^19.2.15",
    "@angular/common": "^19.2.15",
    "@angular/compiler": "^19.2.15",
    "@angular/core": "^19.2.15",
    "@angular/forms": "^19.2.15",
    "@angular/platform-browser": "^19.2.15",
    "@angular/platform-browser-dynamic": "^19.2.15",
    "rxjs": "^7.8.0",
    "tslib": "^2.6.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/cli": "^19.2.18",
    "@angular-devkit/build-angular": "^19.2.18",
    "@angular/compiler-cli": "^19.2.15",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.3",
    "eslint": "^9.0.0",
    "prettier": "^3.2.0",
    "@angular-eslint/eslint-plugin": "^18.0.0",
    "@angular-eslint/eslint-plugin-template": "^18.0.0",
    "@angular-eslint/template-parser": "^18.0.0",
    "cypress": "^13.13.0",
    "eslint-plugin-cypress": "^3.5.0",
    "wait-on": "^7.0.0",
    "semver": "^7.5.4"
  }
}
